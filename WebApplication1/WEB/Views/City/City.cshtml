@model WEB.Models.CityPageModel

@{
	ViewData["Title"] = "City";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Login</h2>

<hr />
<div class="row">
	<div class="col-md-4">
		<form method="post">
			<div asp-validation-summary="All" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="SityName" class="control-label"></label>
				<input asp-for="SityName" class="form-control" />
			</div>
			<div class="form-group">
				<label asp-for="AmountLivers" class="control-label"></label>
				<input asp-for="AmountLivers" class="form-control" />
			</div>
			
			<div class="form-group">
				<input type="submit" value="Login" class="btn btn-default" />
			</div>
		</form>
		<div>
			<p1>@ViewData["CityWhichUserLooking"]</p1>
		</div>
	</div>
</div>
